<section>
  <div class="container">
    <div class="float-end mb-3">
      <a class="btn btn-success " , href="admin/add-product">Add product</a>
    </div>
    <div class="my-5">
    <table id="admin_landingpage" class="display" >
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Price</th>
          <th scope="col">Image</th>
          <th scope="col" >Options</th>
          <th scope="col" >Options</th>
        </tr>
      </thead>
      <tbody>

        {{#each products}}
        <tr>
          <th scope="row"> {{inc @index}} </th>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td>{{this.price}}</td>
          <td> <img width="50px" , height="50px" src="/product-images/{{this._id}}.jpg" alt=""> </td>
          <td>
            <a href="admin/edit_product?id={{this._id}}" class="btn btn-info">Edit</a></td>
            <td>
            <a href="admin/delete_product?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete it?')">Delete</a>
          </td>
        </tr>
        {{/each}}

      </tbody>
    </table>
    </div>
  </div>

</section>